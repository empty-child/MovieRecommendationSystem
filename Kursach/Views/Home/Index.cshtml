@model IEnumerable<Kursach.Models.MoviesModel>
@{
    ViewBag.Title = "Домашняя страница";
}

<h2>Список картин</h2>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название фильма</th>
                <th>Жанры</th>
                <th>Ваша оценка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Title, "Movie", "Home", new { id = item.MovieID }, null)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genres)</td>
                    <td class="col-md-2">
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm())
                            {
                                <input type="hidden" value="0" name="InnerUserID" />
                                <input type="hidden" value="@item.MovieID" name="MovieID" />
                                <div class="input-group">
                                    <input class="form-control" id="Rating">
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-default">Отправить</button>
                                    </span>
                                </div>
                            }
                        }
                        //else if ()
                        //{

                        //}
                        else
                        {
                            @Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <ul class="pagination">
            @if (!ViewBag.previousPageStat)
            {
                <li class="disabled"><a href="">Предыдущая страница</a></li>
            }
            else
            {
                <li><a href="/Home/Index/@ViewBag.previousPage">Предыдущая страница</a></li>
            }
            @if (!ViewBag.nextPageStat)
            {
                <li class="disabled"><a href="">Следующая страница</a></li>
            }
            else
            {
                <li><a href="/Home/Index/@ViewBag.nextPage">Следующая страница</a></li>
            }
        </ul>
    </div>
</div> 