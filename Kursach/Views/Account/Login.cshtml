@model Kursach.Models.LoginModel

@{
    ViewBag.Title = "Авторизация";
}

<h2>Авторизация</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group">
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Логин" } })
    </div>

    <div class="form-group">
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Пароль" } })
    </div>

    <button class="btn" type="submit">Войти</button>
}